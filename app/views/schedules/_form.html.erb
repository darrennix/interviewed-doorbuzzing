<p>
  During scheduled hours, your door will automatically unlock without requesting a PIN Code or calling phone destinations.
</p>

<%= form_for(@schedule, html: {class: 'form-horizontal'}) do |f| %>
  <% if @schedule.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <label for="schedule_day_of_week">Day of week</label>
    </div>
    <div class="col-sm-4">
      <%= f.select(
          :day_of_week,
          options_for_select(Date::DAYNAMES.zip((0..6).to_a), @schedule.day_of_week),
          {include_blank: false},
          {class: 'form-control'}
        )
      %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <label for="schedule_start_time">Start time</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field(:start_time, {class: 'form-control'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <label for="schedule_end_time">End time</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field(:end_time, {class: 'form-control'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit(class: 'btn btn-primary', value: 'Save') %>
    </div>
  </div>

<% end %>
