<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin'}) do |f| %>

  <h2 class="form-signin-heading">forgot password?</h2>
  <div class="login-wrap">
      <div class="user-login-info">
          <p>
            <%= devise_error_messages! %>
          </p>
          <%= f.text_field :email, autofocus: true, placeholder: "Email", class: 'form-control'  %>
      </div>

      <button class="btn btn-lg btn-login btn-block" type="submit">reset password</button>

      <div class="registration">
        <%= render "devise/shared/links" %>
      </div>

  </div>

<% end %>
